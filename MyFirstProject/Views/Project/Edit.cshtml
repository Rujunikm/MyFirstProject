@model MyFirstProject.Models.SignUpLoginViewModel

@{
    ViewData["Title"] = "Edit";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="container" style="padding-bottom:10%">
        <div class="text-center">
            <h1>Edit</h1>
        </div>
        <form method="post" asp-action="Edit">
            <div class="form-group">
                <label asp-for="Username"></label>
                <input type="text" asp-for="Username" class="form-control" placeholder="Enter username" autocomplete="off" readonly />
            </div>
            <div class="form-group">
                <label asp-for="Fname"></label>
                <input type="text" asp-for="Fname" class="form-control" placeholder="Enter First name"/>
            </div>
            <div class="form-group">
                <label asp-for="Lname"></label>
                <input type="text" asp-for="Lname" class="form-control" placeholder="Enter Last name"/>
            </div>
            <div class="form-group">
                <label asp-for="Email"></label>
                <input type="email" asp-for="Email" class="form-control" placeholder="Enter Email" />
            </div>
            <div class="form-group">
                <label asp-for="MobileNo"></label>
                <input type="number" asp-for="MobileNo" class="form-control" placeholder="Enter Mobile No" />
            </div>
            <div class="form-group">
                <label asp-for="State"></label>
                <select class="form-select" name="State" id="State">
                    <option value="Maharashtra">Maharashtra</option>
                    <option value="Gujrat">Gujrat</option>
                    <option value="Up">Up</option>
                    <option value="Mp">Mp</option>
                </select>
            </div>
            <div class="form-group">
                <label asp-for="City"></label>
                <select class="form-select" name="City" id="city">
                    <option value="Pune">Pune</option>
                    <option value="Aurangabad">Aurangabad</option>
                    <option value="Dhule">Dhule</option>
                    <option value="Nagpur">Nagpur</option>
                </select>
            </div>
            <div class="form-group">
                <label asp-for="DOB"></label>
                <input type="date" asp-for="DOB" class="form-control" placeholder="Date_Of_Birth" />
            </div>
            <div class="form-group">
                <label asp-for="Gender"></label>
                <input type="radio" id="Gender" name="Gender" value="Male" />
                <label>Male</label>
                <input type="radio" id="Gender" name="Gender" value="Female" />
                <label>Female</label>
            </div>
            <div class="form-group">
                <label asp-for="Adress"></label>
                <input type="text" asp-for="Adress" class="form-control" placeholder="Adress"/>
            </div>
            <div class="form-group">
                <label asp-for="Password"></label>
                <input type="password" asp-for="Password" class="form-control" placeholder="Enter Password" />
            </div>
            <button type="submit" class="btn btn-primary" asp-action="Edit">Submit</button>
        <button type="submit" class="btn btn-danger"
        asp-controller="Project" asp-action="Delete">Delete</button>
        </form>
</div>
   
